<UserControl
    x:Class="MeowTextReader.ReaderPage.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MeowTextReader.ReaderPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="200"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <StackPanel
        Margin="20"
        HorizontalAlignment="Left"
        Orientation="Vertical">
        <TextBlock Margin="0,0,0,4" Text="文字大小" />
        <StackPanel Orientation="Horizontal">
            <Button Click="DecreaseFontSize_Click" Content="-" />
            <TextBox
                Width="60"
                Margin="4,0"
                InputScope="Number"
                PreviewKeyDown="FontSizeTextBox_PreviewKeyDown"
                Text="{Binding FontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TextAlignment="Center" />
            <Button Click="IncreaseFontSize_Click" Content="+" />
        </StackPanel>
    </StackPanel>
</UserControl>
