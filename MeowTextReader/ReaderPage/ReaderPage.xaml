<Page
    x:Class="MeowTextReader.ReaderPage.ReaderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MeowTextReader.ReaderPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Storyboard x:Key="SlideOutTopPanel">
            <DoubleAnimation
                Storyboard.TargetName="TopPanel"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                To="-100"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="SlideInTopPanel">
            <DoubleAnimation
                Storyboard.TargetName="TopPanel"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                To="0"
                Duration="0:0:0.2" />
        </Storyboard>
    </Page.Resources>

    <Grid>
        <ListView
            x:Name="ReaderTextListView"
            Background="{Binding BackgroundBrush}"
            ItemsSource="{Binding FileLines}"
            SelectionMode="None"
            Tapped="ReaderTextListView_Tapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        FontSize="{Binding DataContext.FontSize, ElementName=ReaderTextListView, FallbackValue=20}"
                        Foreground="{Binding DataContext.ForegroundBrush, ElementName=ReaderTextListView}"
                        IsTextSelectionEnabled="False"
                        Text="{Binding}"
                        TextWrapping="WrapWholeWords"
                        RightTapped="LineTextBlock_RightTapped" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="88*" />
                <ColumnDefinition Width="7*" />
            </Grid.ColumnDefinitions>
            <Grid
                Grid.Column="0"
                VerticalAlignment="Bottom"
                Height="200"
                Background="Transparent"
                Tapped="LeftOverlay_Tapped" />
            <Border
                Grid.Column="2"
                VerticalAlignment="Bottom"
                Height="200"
                Background="Transparent"
                Tapped="RightOverlay_Tapped" />
        </Grid>

        <StackPanel
            x:Name="TopPanel"
            Height="Auto"
            Padding="8"
            VerticalAlignment="Top"
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
            Opacity="1"
            Orientation="Vertical">
            <StackPanel.RenderTransform>
                <TranslateTransform Y="0" />
            </StackPanel.RenderTransform>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Width="80"
                        Margin="0,0,0,10"
                        Click="BackButton_Click"
                        Content="返回" />
                    <TextBlock
                        x:Name="TitleText"
                        Grid.Column="1"
                        Margin="8,0,0,8"
                        VerticalAlignment="Center"
                        TextWrapping="WrapWholeWords" />
                </Grid>
                <Button
                    x:Name="SettingsButton"
                    Grid.Column="1"
                    Width="80"
                    Margin="8,0,0,10"
                    HorizontalAlignment="Right"
                    Click="SettingsButton_Click"
                    Content="設定" />
            </Grid>
            <Slider
                x:Name="ScrollSlider"
                VerticalAlignment="Center"
                IsThumbToolTipEnabled="False"
                Maximum="1"
                Minimum="0"
                ValueChanged="ScrollSlider_ValueChanged" />
        </StackPanel>

        <ProgressRing
            x:Name="LoadingRing"
            Grid.RowSpan="3"
            Width="48"
            Height="48"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsActive="False"
            Visibility="Collapsed" />

        <TeachingTip
            x:Name="SettingsTeachingTip"
            Title="設定"
            IsLightDismissEnabled="True"
            PreferredPlacement="TopRight">
            <local:SettingsDialog />
        </TeachingTip>
    </Grid>
</Page>
