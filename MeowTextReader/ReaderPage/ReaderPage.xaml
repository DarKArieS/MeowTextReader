<Page
    x:Class="MeowTextReader.ReaderPage.ReaderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MeowTextReader.ReaderPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button
                        Width="80"
                        Margin="0,0,0,10"
                        Click="BackButton_Click"
                        Content="返回" />
                    <TextBlock
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        Text="{Binding FileName}"
                        TextAlignment="Start"
                        TextWrapping="Wrap" />
                    <TextBlock
                        x:Name="SliderPercentText"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center" />
                </StackPanel>
                <Button
                    x:Name="SettingsButton"
                    Grid.Column="1"
                    Width="80"
                    Margin="8,0,0,10"
                    HorizontalAlignment="Right"
                    Click="SettingsButton_Click"
                    Content="設定" />
            </Grid>
            <Slider
                x:Name="ScrollSlider"
                VerticalAlignment="Center"
                IsThumbToolTipEnabled="False"
                Maximum="1"
                Minimum="0"
                ValueChanged="ScrollSlider_ValueChanged" />
        </StackPanel>

        <ListView
            x:Name="FileListView"
            Grid.Row="2"
            ItemsSource="{Binding FileLines}"
            Background="{Binding BackgroundBrush}"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        FontSize="{Binding DataContext.FontSize, ElementName=FileListView, FallbackValue=20}"
                        Foreground="{Binding DataContext.ForegroundBrush, ElementName=FileListView}"
                        IsTextSelectionEnabled="True"
                        Text="{Binding}"
                        TextWrapping="WrapWholeWords" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ProgressRing
            x:Name="LoadingRing"
            Grid.RowSpan="3"
            Width="48"
            Height="48"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsActive="False"
            Visibility="Collapsed" />

        <TeachingTip
            x:Name="SettingsTeachingTip"
            Title="設定"
            IsLightDismissEnabled="True"
            PreferredPlacement="TopRight">
            <local:SettingsDialog />
        </TeachingTip>
    </Grid>
</Page>
